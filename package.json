{
  "name": "electron-vue-rsbuild-bun",
  "version": "0.1.2",
  "description": "Modern Electron + Vue boilerplate using Rsbuild and Bun runtime.",
  "scripts": {
    "dev": "node scripts/dev-server.js",
    "build": "node scripts/build-script.js",
    "dist": "bun run build && electron-builder",
    "rsbuild:dev": "bunx rsbuild dev --config scripts/rsbuild.config.js",
    "rsbuild:build": "bunx rsbuild build --config scripts/rsbuild.config.js",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "author": "naranyala",
  "build": {
    "appId": "com.some.electron.quickstart",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "msi"
    },
    "files": [
      "main.cjs",
      "build/**/*"
    ]
  },
  "keywords": [
    "rsbuild",
    "vue"
  ],
  "license": "MIT",
  "dependencies": {
    "vue": "^3.3.4",
    "winbox": "^0.2.82"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@rsbuild/core": "^1.7.2",
    "@rsbuild/plugin-type-check": "^1.3.3",
    "@rsbuild/plugin-vue": "^1.2.3",
    "@types/node": "^25.0.10",
    "@types/vue": "^2.0.0",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/runtime-dom": "^3.5.27",
    "concurrently": "^9.2.1",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0",
    "entities": "^2.2.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}
